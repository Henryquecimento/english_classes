{% extends "layout.njk" %}

{% block head %}
    <title>Start X - English Student</title>
    <link rel='stylesheet' href="/css/index.css">  
{% endblock %}

{% block content %}
    <div class="card table-container">

          <div class="header">
            <a href="/students/create" class="newButton">New</a>

            <form action="/students" method="GET">
                <input 
                    type="text" 
                    name="filter"
                    placeholder="Filtrar por nome"
                >
                <button type="submit">Filtrar</button>
            </form>
        
        </div>
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Students</th>
                    <th>E-mail</th>
                    <th>Class</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                <tr>
                    <td><span style="background-image: url({{ student.avatar_url }})"></span>
                    {{ student.name }}</td>
                    
                    <td>{{ student.email }}</td>
                    <td>{{ student.education_level }}</td>
                    <td><a href="/students/{{ student.id }}">View</a></td>
                </tr>              
                {% endfor %}
            </tbody>
            
        </table>        
       
    </div>
{% endblock %}