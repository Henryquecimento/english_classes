{% extends "layout.njk" %}

{% block head %}
    <title>Start X - Edit your profile</title>
    <link rel='stylesheet' href="/css/index.css">  
{% endblock %}

{% block content %}
<div class="card">

    <section 
        class="avatar"
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="details">
        <form method='POST' action="/teachers?_method=PUT">

            <h3>Edit Teachers</h3>

            {% include "teachers/fields.njk" %}

            <input type="hidden" name="id" value='{{ teacher.id }}'>

        </form>

        <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
            <input type="hidden" name="id" value='{{ teacher.id }}'>
            <button type="submit">Delete</button>
        </form>

        {% include "confirm.njk" %}

    </section>
        
</div>
{% endblock %}