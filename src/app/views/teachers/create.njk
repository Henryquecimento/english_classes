{% extends "layout.njk" %}

{% block head %}
    <title>Start X - English Teacher</title>
    <link rel='stylesheet' href="/css/index.css">  
{% endblock %}

{% block content %}
    <form class="card" method='POST' action='/teachers'>

        <section 
        class="avatar"
        style="background: url(https://source.unsplash.com/collection/332741/500x500) no-repeat center center / cover">
        </section>

        <section class="details">
            <h3>Details</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                        type = "url"
                        name = "avatar_url"
                        placeholder = "https://">
                </div>
            </div>

            <div class="item">
                <div>Name</div>
                <div>
                    <input 
                        type = "text"
                        name = "name"
                        placeholder = "Insert your name">
                </div>
            </div>

            <div class="item">
                <div>Birth</div>
                <div>
                    <input 
                        type = "date"
                        name = "birth">
                </div>
            </div>

            <div class="item">
                <div>Education level</div>
                <div>
                    <select name = "education_level">
                        <option value="Graduation">Graduation</option>
                        <option value="Masters">Masters</option>
                        <option value="Doctor">Doctor</option>
                        <option value="Phd">Phd</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Class modality</div>
                <div>
                    <span><input type = "radio" name = "class_modality" value = 'P' checked>Presential</span>
                    <span><input type="radio" name = "class_modality" value = 'R'>Remote</span>
                </div>
            </div>

            <div class="item">
                <div>Subjects</div>
                <div>
                    <input 
                        type = "text"
                        name = "subjects"
                        placeholder = "Insert the subjects with an comma point">
                </div>
            </div>

            <button type = 'submit'>Save</button>

        </section>
        
    </form>
{% endblock %}